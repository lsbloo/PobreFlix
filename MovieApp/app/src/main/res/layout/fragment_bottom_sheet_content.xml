<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:id="@+id/constraintFather">



    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="@id/constraintFather"
        app:layout_constraintTop_toTopOf="@id/constraintFather"
        android:id="@+id/frameLayoutImageView"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageMovie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/title_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/frameLayoutImageView"
        app:layout_constraintTop_toTopOf="@id/constraintFather"
        android:textColor="@color/white"
        tools:text="DEATH NOTE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_movie"
        app:layout_constraintLeft_toRightOf="@id/frameLayoutImageView"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="2007"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:id="@+id/txt_year_movie"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/txt_year_movie"
        app:layout_constraintLeft_toRightOf="@id/frameLayoutImageView"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:text="Demons that once almost destroyed the world, are revived by someone. To prevent the world from being destroyed, the demon has to be sealed and the only one who can do it is the shrine maiden Shion from the country of demons, who has two powers; one is sealing demons and the other is predicting the deaths of humans. This time Naruto's mission is to guard Shion, but she predicts Naruto's death. The only way to escape it, is to get away from Shion, which would leave her unguarded, then the demon, whose only goal is to kill Shion will do so, thus meaning the end of the world. Naruto decides to challenge this"
        android:layout_marginLeft="10dp"
        android:id="@+id/txt_overview"
        android:layout_marginTop="8dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="212dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintLeft_toRightOf="@id/frameLayoutImageView"
        app:layout_constraintTop_toTopOf="@id/constraintFather"
        android:layout_marginTop="12dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutImageView"
        app:layout_constraintLeft_toLeftOf="@id/constraintFather"
        android:text="Assistir"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_baseline_play_arrow_24"
        android:id="@+id/btn_play"
        >
    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutImageView"
        app:layout_constraintLeft_toRightOf="@id/btn_play"
        android:drawableTop="@drawable/ic_baseline_arrow_downward_24"
        android:text="Baixar"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>